<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.unimib.musictaste">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicTaste">
        <activity android:name=".ui.LaunchScreenActivity"
            android:theme="@style/LaunchTheme"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ArtistActivity" />
        <activity android:name=".ui.AlbumActivity" />
        <activity android:name=".ui.SongActivity" />
        <activity android:name=".ui.RegistrationActivity" />
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.MainActivity" />
    </application>

</manifest>