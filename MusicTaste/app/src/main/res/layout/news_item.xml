<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:padding="10dp"
    android:background="?android:attr/selectableItemBackground">



        <ImageView
            android:id="@+id/imgNewsImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvTitleNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="#902F2D38"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgNewsImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgNewsImage"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/tvDescriptionNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:padding="5dp"
        android:textAlignment="gravity"
        android:textColor="@color/TextGray"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imgNewsImage"
        app:layout_constraintStart_toStartOf="@+id/imgNewsImage"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleNews"
        app:layout_constraintVertical_bias="0.881" />


</androidx.constraintlayout.widget.ConstraintLayout>